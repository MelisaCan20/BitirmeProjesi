@model BitirmeProjesi.Models.Siniflar.haberler
@{
    ViewBag.Title = "HaberiBul";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haberi Güncelle</h2>
<br />
@using (Html.BeginForm("HaberGuncelle", "AdminPanel", FormMethod.Post))
{
    <form class="form-group" method="post">

        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" ,@readonly="readonly"})
        <br />
        @Html.LabelFor(x => x.Baslik)
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Tarih)
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        <br />



        @Html.LabelFor(x => x.FotoUrl)
        @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.icerik)
        @Html.TextAreaFor(x => x.icerik,15,1, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Haberi Güncelle</button>
                

    </form>

}
