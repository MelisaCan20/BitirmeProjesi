@using BitirmeProjesi.Models.Siniflar;
@model List<haberler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haber Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
       


    </tr>
   
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/AdminPanel/HaberSil/@x.ID" class="btn btn-danger">sil</a></td>
            <td><a href="/AdminPanel/HaberiBul/@x.ID" class="btn btn-warning">güncelle</a></td>
            
        </tr>

    }


</table>
<a href="/AdminPanel/YeniHaber/" class="btn btn-primary">Yeni Haber</a>

