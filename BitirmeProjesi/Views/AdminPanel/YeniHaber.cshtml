

@model  BitirmeProjesi.Models.Siniflar.haberler


@{
    ViewBag.Title = "YeniHaber";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Haber Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.kategoriId)
    @Html.TextBoxFor(x => x.kategoriId, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.FotoUrl)
    @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.icerik)
    @Html.TextAreaFor(x => x.icerik, 15, 1, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Haber Ekle</button>


</form>

