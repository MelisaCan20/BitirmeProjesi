@using BitirmeProjesi.Models.Siniflar
@model List<haberler>
@{
    Layout = null;
}
<main>
    <article id="popular-news">
        <div class="latest">
            <h2>SON DAKİKA HABERLERİ</h2>
            <section class="popular-news-carousel">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                
                    <div class="carousel-inner">
                        @foreach (var x in Model)
                        {


                            if (@ViewBag.first == x.ID)
                            {
                                <div class="item active">
                                    <img src="@x.FotoUrl" alt="Chania">
                                    <div class="carousel-caption">
                                        <h3>
                                            @x.Kategori.KategoriAd
                                    </h3>
                                    <a href="/Uye/HaberDetay/@x.ID/" style="color:white;">@x.Baslik</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="@x.FotoUrl" alt="Chicago">
                                <div class="carousel-caption">
                                    <h3>@x.Kategori.KategoriAd</h3>
                                   
                                    <a href="/Uye/HaberDetay/@x.ID/" style="color:white;">@x.Baslik</a>
                                </div>
                            </div>

                        }






                    }
